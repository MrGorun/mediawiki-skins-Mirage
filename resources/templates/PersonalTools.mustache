<nav id="{{ id }}" class="{{ class }}" aria-labelledby="{{ id }}-label" {{& html-tooltip }} {{& html-user-language-attributes }}>
	<h3 id="{{ id }}-label">{{ label }}</h3>
	<div class="skin-mirage-dropdown-container skin-mirage-personaltools-dropdown" tabindex="0">
		{{# has-avatar }}
			<span class="skin-mirage-ooui-icon skin-mirage-avatar-holder"></span>
		{{/ has-avatar }}
		<h4 class="skin-mirage-dropdown-header {{ html-username-icon-classes }}">
			<span class="skin-mirage-username">
				{{# is-anon }}
					{{ msg-notloggedin }}
				{{/ is-anon }}
				{{^ is-anon }}
					{{ username }}
				{{/ is-anon }}
			</span>
			{{& html-dropdown-indicator }}
		</h4>
		<div class="skin-mirage-dropdown-list skin-mirage-dropdown-hide">
			<ul {{& html-user-language-attributes }}>
				<li class="skin-mirage-dropdown-username">
					<span class="skin-mirage-username">
						{{# is-anon }}
							{{ msg-notloggedin }}
						{{/ is-anon }}
						{{^ is-anon }}
							{{ username }}
						{{/ is-anon }}
					</span>
				</li>
				{{& html-items }}
			</ul>
			<div class="skin-mirage-dropdown-list-anchor"></div>
		</div>
	</div>
	{{& html-after-portal }}
</nav>
