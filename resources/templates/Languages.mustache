<nav id="{{ id }}" class="{{& class }}" aria-labelledby="{{ id }}-label" {{& html-tooltip }} {{& html-user-language-attributes }}>
	{{! ULS attaches the click handler to .mw-interlanguage-selector }}
	<div id="skin-mirage-language-button" class="skin-mirage-dropdown-container mw-interlanguage-selector" tabindex="0">
		<h3 id="{{ id }}-label" class="{{& html-language-button-icon }}">{{ label }}
			{{& html-dropdown-indicator }}
		</h3>
		<div class="skin-mirage-dropdown-list skin-mirage-dropdown-hide">
			<ul>
				{{& html-items }}
			</ul>
			{{& html-after-portal }}
			<div class="skin-mirage-dropdown-list-anchor"></div>
		</div>
	</div>
</nav>
