<div class="mirage-footer-wrapper">
	{{! This specifies role="contentinfo" for IE compatibility. }}
	<footer class="mw-footer" {{& html-user-language-attributes }} role="contentinfo">
		{{# data-info }}
			<ul id="footer-info" class="unstyled-list {{ className }}">
				{{# array-items }}
					<li id="{{ id }}">{{& html }}</li>
				{{/ array-items }}
			</ul>
		{{/ data-info }}
		<div id="footer-links">
			{{# data-places }}
				{{> FooterList }}
			{{/ data-places }}
			{{# array-extra-footer-links }}
				{{> FooterList }}
			{{/ array-extra-footer-links }}
		</div>
		{{# data-icons }}
			<ul id="footer-icons" class="horizontally-oriented-list {{ className }}">
				{{# array-items }}
					<li id="{{ id }}">{{& html }}</li>
				{{/ array-items }}
			</ul>
		{{/ data-icons }}
	</footer>
</div>
